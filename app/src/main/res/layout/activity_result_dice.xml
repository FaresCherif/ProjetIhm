<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultDice">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/diceDescription"
        app:layout_constraintEnd_toEndOf="@+id/ResultDiceTitle"
        app:layout_constraintStart_toStartOf="@+id/ResultDiceTitle"
        app:layout_constraintTop_toBottomOf="@+id/ResultDiceTitle"
        app:srcCompat="@drawable/dice1" />

    <TextView
        android:id="@+id/ResultDiceTitle"
        android:layout_width="67dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/resultDiceTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callNextQuestion"
        android:text="@string/buttonNextQuestion3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>